{
	"compilerOptions": {
		"target": "es2020",
		"module": "es2020",
		"allowJs": false,
		"checkJs": false,
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"]
}
